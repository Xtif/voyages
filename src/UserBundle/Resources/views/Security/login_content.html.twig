{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="error-message col-lg-10 m-auto">
      <i class="fa fa-exclamation-circle mr-2 ml-3" aria-hidden="true"></i>
      Identifiant ou mot de passe invalide.
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
  {% if csrf_token %}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  {% endif %}

  <div class="form-group">
    <label for="username" class="field-label">Nom d'utilisateur ou email</label>
    <input type="text" id="username" class="form-control col-lg-10 m-auto" name="_username" placeholder="Nom d'utilisateur ou email" required="required" />
  </div>

  <div class="form-group">
    <label for="password" class="field-label">Mot de passe</label>
    <input type="password" id="password" class="form-control col-lg-10 m-auto" name="_password" required="required" placeholder="Mot de passe" />
  </div>

  <div class="form-group row">
    <div class="m-auto">
      <input type="submit" id="_submit" class="btn btn-info" name="_submit" value="Se connecter" />
    </div>
  </div>
</form>


