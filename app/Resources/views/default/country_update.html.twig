{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Modifier le pays{% endblock %}

{% block body %}
    {{ parent() }}

    <div id="carousel" class="carousel mb-3" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="background-image: url('{{ asset('uploads/' ~ country.folder ~ '/' ~ country.photo ~ '') }}')">
            </div>
        </div>
    </div> <!--End carousel -->

    <div class="empty-div mb-3">
    </div>

    <div class="col-lg-11 m-auto">
        <h1 class="main-title mt-2">MODIFIER LE PAYS</h1>
    </div>

    <div class="col-lg-8 m-auto">

        {{ form_start(form) }}      

        <div class="form-group">
            {{ form_row(form.title) }}
        </div>

        <div class="form-group">
            {{ form_row(form.date) }}
        </div>

        <div class="form-group">
            {{ form_row(form.photo) }}
        </div>

        <div class="form-group col-lg-4 m-auto">
            {{ form_row(form.submit) }}
        </div>

        {{ form_rest(form) }}

        {{ form_end(form) }}

    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}


