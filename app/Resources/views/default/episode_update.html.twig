{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Modifier l'Ã©pisode{% endblock %}

{% block body %}
    {{ parent() }}

    <div id="carousel" class="carousel mb-3" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="background-image: url('{{ asset('uploads/' ~ episode.country.folder ~ '/' ~ episode.number ~ '/' ~ episode.mainPhoto ~ '') }}')">
            </div>
        </div>
    </div> <!--End carousel -->

    <div class="empty-div mb-3">
    </div>

    <div class="col-lg-11 m-auto">
        <h1 class="main-title mt-2">MODIFIER L'EPISODE</h1>
    </div>

    <div class="col-lg-8 m-auto">

            {{ form_start(form) }}      

            <div class="form-group">
                {{ form_row(form.title) }}
            </div>

{#          <div class="form-group">
                {{ form_row(form.number) }}
            </div>
#}
            <div class="form-group">
                {{ form_row(form.dateFrom) }}
            </div>

            <div class="form-group">
                {{ form_row(form.dateTo) }}
            </div>

            <div class="form-group">
                {{ form_row(form.country) }}
            </div>

            <div class="form-group">
                {{ form_row(form.mainPhoto) }}
            </div>

            <div class="form-group">
                {{ form_row(form.video) }}
            </div>

            <div class="form-group">
                {{ form_row(form.map) }}
            </div>

            <div class="form-group">
                {{ form_row(form.shortText) }}
            </div>

            <div class="form-group">
                {{ form_row(form.text) }}
            </div>

            <div class="form-group col-lg-4 m-auto">
                {{ form_row(form.submit) }}
            </div>

            {{ form_rest(form) }}

            {{ form_end(form) }}

        </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        tinymce.init(
        {
            selector: '.tinymce',
            tinymce_jquery: true,
            height: 500,
            plugins: "advlist autolink lists link image charmap print preview hr anchor pagebreak searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking save table contextmenu directionality emoticons template paste textcolor",
            toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
            // image_title: true,
            images_upload_url: "{{ path('image_upload') }}",
            images_upload_base_path: '/web',
            images_upload_credentials: true,
            // enable automatic uploads of images represented by blob or data URIs
            automatic_uploads: true,
        });    
    </script>
{% endblock %}


