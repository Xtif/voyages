{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Cr√©er un nouveau pays{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="empty-div-small mb-3">
    </div>

    <div class="col-lg-11 m-auto">
        <h1 class="main-title mt-2">AJOUTER UN NOUVEAU PAYS</h1>

        <div class="col-lg-8 m-auto">

            {{ form_start(form) }}      

            <div class="form-group">
                {{ form_row(form.title) }}
            </div>

            <div class="form-group">
                {{ form_row(form.date) }}
